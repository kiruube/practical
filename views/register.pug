doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Admin Registration form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(rel='stylesheet', href='/css/style.css')
.container
  h3 Register Admin
  form#adminRegister(action='/register' method='POST')
    .mb-3
      label.form-label(for='fullName') Fullname:
      input#fullName.form-control(type='text' name='fullName')
    .mb-3
      label.form-label(for='location') Location:
      input#location.form-control(type='text' name='location')
    .mb-3
      label.form-label(for='contact') Contact:
      input#contact.form-control(type='text' name='contact')
    .mb-3
      label.form-label(for='email') Email Address:
      input#email.form-control(type='email' name='email')
    .mb-3
      label.form-label(for='role') Role:
      input#role.form-control(type='text' name='role' value='Admin')
    .mb-3
      label.form-label(for='password') Password:
      input#password.form-control(type='password' name='password')
    button.btn.btn-primary(type='submit') Register
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
